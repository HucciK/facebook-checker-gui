{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "checker-gui-js",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "shell": {
        "all": true,
        "sidecar": true,
        "scope": [
          { "name": "./bin/cmd", "sidecar": true }
        ]
      },
      "dialog": {
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "externalBin": ["./bin/cmd"],
      "identifier": "m177-checker",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "checker-gui-js",
        "width": 1000,
        "height": 600
      }
    ]
  }
}
